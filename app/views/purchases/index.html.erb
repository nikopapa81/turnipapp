<div class="page-header">
  <h1>Purchases</h1>
</div>

<p><a href="/purchases/new" class="btn btn-primary">Add a New Purchase</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Cost</th>
      <th>Source</th>
      <th>Expiration date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.item_id %></td>
        <td><%= purchase.quantity %></td>
        <td>$ <%= purchase.cost %></td>
        <td><%= purchase.source %></td>
        <td><%= purchase.expiration_date %></td>
        <td>
          <a href="/purchases/<%= purchase.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/purchases/<%= purchase.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_purchase/<%= purchase.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

