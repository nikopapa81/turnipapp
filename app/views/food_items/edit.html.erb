<div class="page-header">
  <h1>Edit Food Item #<%= @food_item.id %></h1>
</div>

<% if @food_item.errors.any? %>
  <% @food_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_food_item/<%= @food_item.id %>" class="form-horizontal">
  <!-- Label and input for item_name -->
  <div class="form-group">
    <label for="item_name" class="col-sm-2 control-label">
      Item name
    </label>
    <div class="col-sm-10">
      <input type="text" id="item_name" name="item_name" placeholder="Item name" class="form-control" value="<%= @food_item.item_name %>">
    </div>
  </div>

  <!-- Label and input for uofm_id -->
  <div class="form-group">
    <label for="uofm_id" class="col-sm-2 control-label">
      Uofm
    </label>
    <div class="col-sm-10">
      <input type="text" id="uofm_id" name="uofm_id" placeholder="Uofm" class="form-control" value="<%= @food_item.uofm_id %>">
    </div>
  </div>

  <!-- Label and input for category_id -->
  <div class="form-group">
    <label for="category_id" class="col-sm-2 control-label">
      Category
    </label>
    <div class="col-sm-10">
      <input type="text" id="category_id" name="category_id" placeholder="Category" class="form-control" value="<%= @food_item.category_id %>">
    </div>
  </div>

  <!-- Label and input for avg_exp_days -->
  <div class="form-group">
    <label for="avg_exp_days" class="col-sm-2 control-label">
      Avg exp days
    </label>
    <div class="col-sm-10">
      <input type="text" id="avg_exp_days" name="avg_exp_days" placeholder="Avg exp days" class="form-control" value="<%= @food_item.avg_exp_days %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Food Item" class="btn btn-primary">
    </div>
  </div>
</form>
