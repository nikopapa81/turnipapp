<div class="page-header">
  <h1>Food categories</h1>
</div>

<p><a href="/food_categories/new" class="btn btn-primary">Add a New Food Category</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Category name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @food_categories.each do |food_category| %>
      <tr>
        <td><%= food_category.category_name %></td>
        <td>
          <a href="/food_categories/<%= food_category.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/food_categories/<%= food_category.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_food_category/<%= food_category.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

