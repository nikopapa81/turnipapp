<div class="page-header">
  <h1>Add Food Category</h1>
</div>

<% if @food_category.errors.any? %>
  <% @food_category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_food_category" class="form-horizontal">
  <!-- Label and input for category_name -->
  <div class="form-group">
    <label for="category_name" class="col-sm-2 control-label">
      Category name
    </label>
    <div class="col-sm-10">
      <input type="text" id="category_name" name="category_name" placeholder="Category name" class="form-control" value="<%= @food_category.category_name %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Food Category" class="btn btn-primary">
    </div>
  </div>
</form>
